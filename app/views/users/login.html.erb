<div class="outer_container">
    <div class="container">
        <div class="row login_card">
            <div class="col s4 offset-s4">
                <div class="card medium">
                    <div class="card-content">
                        <span class="card-title center">Login</span>
                        <%= form_with url: users_create_path do |f| %>
                            <%= f.label "email" %>
                            <%= f.text_field :email %>

                            <%= f.label "Password" %>
                            <%= f.password_field :password %>

                            <div class="center">
                                <button class="waves-effect waves-light btn blue center" type="submit">Login</button>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>